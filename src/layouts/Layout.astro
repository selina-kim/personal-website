---
import "@fontsource/red-hat-display/400.css";
import "@fontsource/red-hat-display/700.css";

const { title } = Astro.props as Props;

export interface Props {
  title: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="language" content="English" />
    <meta name="title" content="Selina Kim" />
    <meta
      name="description"
      content="Selina Kim Personal Website. Programmer. Computer Science Student."
    />
    <title>{title}</title>
    <script src="@util/themeToggle.js"></script>
  </head>
  <body
    class="h-full bg-light-main text-dark-main dark:bg-dark-main dark:text-light-main"
  >
    <script src="@util/cursor.js"></script>
    <div id="cursor-small" class="cursor-basic lg:cursor-small"></div>
    <div id="cursor-big" class="cursor-basic lg:cursor-big"></div>
    <slot />
  </body>
</html>
