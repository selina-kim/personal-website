---
import Layout from "../layouts/Layout.astro";
import Navbar from "@components/navbar/Navbar.astro";
import HomeSection from "@components/home/HomeSection.astro";
import Footer from "@components/contact/Footer.astro";
import ProjectSection from "@components/projects/ProjectSection.astro";
import ContactSection from "@components/contact/ContactSection.astro";
import Particles from "@components/home/Particles";

import "../styles/global.css";
---

<Layout title="selina kim">
  <!-- Webpage Content -->
  <div
    class="global-padding mx-auto -mb-[var(--footer-height)] block w-full md:max-w-7xl"
  >
    <Particles
      client:only="react"
      className="animate-fade-in absolute inset-0 -z-10"
      quantity={120}
    />

    <HomeSection sectionId="home-section" />
    <ProjectSection sectionId="project-section" />
    <ContactSection sectionId="contact-section" />
  </div>

  <Footer />

  <div class="fixed top-0 w-full">
    <Navbar />
  </div>
</Layout>
