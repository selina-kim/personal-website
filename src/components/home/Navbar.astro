---
import NavBarHoverStroke from "./NavBarHoverStroke.astro";
---

<nav
  class="fixed top-0 flex h-[var(--navbar-height)] w-full items-end justify-center border-b-[1px] border-light-gray bg-light-main pb-1 pt-3"
>
  <div
    class="global-padding top-0 flex w-full flex-row items-end justify-between md:max-w-7xl"
  >
    <span
      class="select-none whitespace-nowrap bg-accent-gradient bg-clip-text text-4xl font-bold text-transparent md:text-5xl"
    >
      selina kim
    </span>

    <span class="flex space-x-8">
      <ul
        class="relative ml-6 flex select-none flex-col items-end space-y-1 pb-1 text-center text-base font-bold text-dark-main sm:ml-0 sm:flex-row sm:gap-x-4 sm:space-y-0 sm:pb-3 sm:text-lg md:text-2xl"
      >
        <li class="hoverable navbar-object-hover">
          <div class="stroke-animation">
            <NavBarHoverStroke />
          </div>
          <a href="#home-section" rel="noopener noreferrer">home</a>
        </li>
        <li class="hoverable navbar-object-hover">
          <div class="stroke-animation">
            <NavBarHoverStroke />
          </div>
          <a href="#project-section" rel="noopener noreferrer">projects</a>
        </li>
        <li class="hoverable navbar-object-hover">
          <div class="stroke-animation">
            <NavBarHoverStroke />
          </div>
          <a href="#contact-section" rel="noopener noreferrer">contact</a>
        </li>
      </ul>
    </span>
  </div>
</nav>
