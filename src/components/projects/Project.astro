---
import { Image } from "astro:assets";

const { img, imgAlt, imgWidth, imgHeight, name, desc, link, LinkIcon, title } =
  Astro.props;

export interface Props {
  img: any;
  imgAlt: string;
  imgWidth: number;
  imgHeight: number;
  name: string;
  desc: string;
  link: string;
  LinkIcon: any;
  title: string;
}
---

<a
  href={link}
  aria-label={"Project Link"}
  rel="noopener noreferrer"
  target="_blank"
  title=`Click for ${title}`
  class="relative w-full max-w-[550px] h-[350px] md:w-[290px] p-[1.5px] overflow-hidden rounded-[13px] project-border-effect select-none cursor-pointer bg-light-gray"
>
  <div class="relative w-full h-full overflow-hidden rounded-xl">
    <Image
      src={img}
      alt={imgAlt}
      width={imgWidth}
      height={imgHeight}
      format="avif"
      class="absolute top-0 object-cover min-h-[60%]"
    />
    <div
      class="absolute h-full w-full project-fill-gradient project-fill-gradient-effect cursor-pointer"
    >
      <!-- project content (name, description, icon) -->
      <div class="absolute w-full h-full left-0 p-3 text-light-main">
        <div class="flex h-[11.5rem] w-full items-end">
          <div class="mx-auto project-icon-mask drop-shadow-md translate-y-2">
            <div class="w-14 rotate-[19deg]">
              <LinkIcon />
            </div>
          </div>
        </div>
        <h3 class="mb-2 bg-">{name}</h3>
        <p class="text-left leading-5">{desc}</p>
      </div>
    </div>
  </div>
</a>
